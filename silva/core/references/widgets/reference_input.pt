<div class="reference-widget" id="#"
     tal:attributes="id view/id">
  <div id="#" title="#" class="ui-widget reference-dialog"
       tal:attributes="id string:${view/id}-dialog;
                       title view/title">
  </div>
  <span>Selected:
    <a href="#" id="#" target="_blank"
       tal:attributes="id string:${view/id}-link;
                       href view/value_url"
       tal:content="view/value_title"></a>
  </span>
  <input type="hidden" value="#" id="#" name=""
         tal:attributes="id string:${view/id}-value;
                         name view/name;
                         value view/value" />
  <input type="hidden" value="#" id="#"
         tal:attributes="id string:${view/id}-base;
                         value view/context_lookup_url" />
  <button class="button reference-dialog-trigger">
      Change
  </button>
</div>
